{
  "manifest_version": 3,

  "name": "Jira Github Chrome Extension",
  "description": "This extension enhances interaction between Github and Jira on Chrome",
  "version": "3.1",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "permissions": [
   "activeTab",
   "storage",
   "https://www.github.com/BLC/*",
   "https://github.com/BLC/*",
   "https://github.com/joshuaheng/pivotal-github-chrome/*"
  ]
}
